// Test ops done on whole arrays of compatible types

program arr is
    variable tmp : integer;
    variable arr : float[3];
    variable arr2: integer[3];

    procedure printArr: integer(variable x : float[3])
        variable ind : integer;
    begin
        for (ind := 0; ind < 3)
            tmp := putfloat(x[ind]);
            ind := ind + 1;
        end for;
	    return 0;
    end procedure;

begin
    arr[0] := 1.5;
    arr[1] := 2.6;
    arr[2] := 3.7;
    arr2[0] := -4;
    arr2[1] := 6;
    arr2[2] := 12;

    // Operations on valid types
    tmp := printArr(arr + arr2);

    // Assignment types must match exactly, so the following is illegal
    // arr2 := arr + arr2;
    // float + integer -> float
    // integer != float
    
    // However this is legal
    arr := arr / arr2;
    // float / integer -> float
    // float == float
    tmp := printArr(arr);
end program.
